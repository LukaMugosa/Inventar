    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd">
    <!--
        Added the constraints for entity EquipmentServicing.
    -->
    <changeSet id="20210417220657-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="employee_id"
                                 baseTableName="equipment_servicing"
                                 constraintName="fk_equipment_servicing_employee_id"
                                 referencedColumnNames="id"
                                 referencedTableName="employee"/>

        <addForeignKeyConstraint baseColumnNames="equipment_id"
                                 baseTableName="equipment_servicing"
                                 constraintName="fk_equipment_servicing_equipment_id"
                                 referencedColumnNames="id"
                                 referencedTableName="equipment"/>

        <addForeignKeyConstraint baseColumnNames="repairer_id"
                                 baseTableName="equipment_servicing"
                                 constraintName="fk_equipment_servicing_repairer_id"
                                 referencedColumnNames="id"
                                 referencedTableName="repairer"/>

    </changeSet>
</databaseChangeLog>
